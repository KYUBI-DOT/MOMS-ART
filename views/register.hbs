{{> header}}

<style>
  body {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    background-color: #f8f9fa;
    color: #333;
    margin-top:140px;
    padding: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 50px 20px;
  }

  .register-container {
    display: flex;
    max-width: 1100px;
    gap: 80px;
    background-image: url('/productimage/sky1.JPG');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 15px;
    padding: 40px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.15);
  }

  .register-form {
    flex: 1;
    max-width: 480px;
    background-color: transparent; /* no container bg */
    padding: 0; /* no padding */
    border-radius: 0;
    box-shadow: none;
    display: flex;
    flex-direction: column;
  }

  .register-form h2 {
    font-weight: 600;
    text-align: center;
    margin-bottom: 30px;
    color: #2c3e50; /* calm dark blue */
  }

  .form-group {
    display: flex;
    align-items: center;
    margin-bottom: 18px;
  }

  .form-group label {
    width: 130px;
    font-weight: 600;
    font-size: 14px;
    text-align: right;
    margin-right: 15px;
    color: #2c3e50;
  }

  .form-group input {
    flex: 1;
    padding: 12px;
    border-radius: 5px;
    border: 1px solid #ccc;
    font-size: 16px;
    background: #f9f9f9;
    transition: 0.3s ease;
  }

  .form-group input:focus {
    background-color: #e0f0ff;
    border: 1px solid #2980b9;
    box-shadow: 0 0 5px rgba(41, 128, 185, 0.5);
    outline: none;
  }

  button[type="submit"] {
    margin-top: 20px;
    padding: 12px;
    background-color: transparent; /* no container */
    border: 2px solid #2980b9;
    color: #2980b9;
    font-weight: 600;
    border-radius: 6px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease, color 0.3s ease;
    align-self: center;
    width: 150px;
  }

  button[type="submit"]:hover {
    background-color: #297fb96a;
    color: white;
  }

  .alert {
    margin-top: 15px;
    color: #2980b9;
    text-align: center;
    font-weight: 600;
  }

  .vip-info {
    flex: 1;
    max-width: 480px;
    padding: 30px 25px;
    background-color: ur(".productimage.sky1.jpg")
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    color: #333;
    font-size: 15px;
    line-height: 1.5;
  }

  .vip-info h3 {
    font-weight: 600;
    color: #2980b9;
    margin-bottom: 20px;
  }

  .vip-info p {
    margin-bottom: 15px;
  }

  .vip-info a {
    color: #2980b9;
    text-decoration: underline;
    cursor: pointer;
  }

  .vip-info a:hover {
    color: #1f5a86;
  }

  @media (max-width: 768px) {
    .register-container {
      flex-direction: column;
      gap: 30px;
      padding: 30px 15px;
    }
    .register-form,
    .vip-info {
      max-width: 100%;
      flex: 1 1 100%;
    }
  }
</style>

<main>
  <div class="register-container">

    <form class="register-form" method="POST" action="/auth/register">
      <h2>Register</h2>

      <div class="form-group">
        <label for="name">Full Name</label>
        <input type="text" id="name" name="name" required />
      </div>

      <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" id="email" name="email" required />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required />
      </div>

      <div class="form-group">
        <label for="passwordConfirm">Confirm Password</label>
        <input type="password" id="passwordConfirm" name="passwordConfirm" required />
      </div>

      <button type="submit">Register</button>

      {{#if message}}
        <div class="alert">{{message}}</div>
      {{/if}}
    </form>

    <div class="vip-info">
      <h3>Mom's Art VIP Loyalty Program</h3>
      <p>Be the first to hear about our latest news and offers and receive <strong>10% off</strong> your purchase every time you shop with us!</p>
      <p>By becoming a VIP member, I agree to receive marketing communications 
        from Mom's Art and confirm that I have read and accepted the <a href="/terms">
        terms and conditions</a> and <a href="/privacyPolicy">Privacy Policy</a>.</p>
    </div>

  </div>
</main>
{{> footer}}
