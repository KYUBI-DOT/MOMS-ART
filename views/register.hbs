{{> header}}
<style>
  body {
    background-color: #fff3f7;
  }

  #hero {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 60px 40px;
    gap: 40px;
    flex-wrap: wrap;
    background-color: #ffe6f0;
    border-radius: 10px;
    margin: 20px;
  }

  .hero-text-left {
    flex: 1;
    min-width: 280px;
  }

  .hero-text-left h2 {
    font-size: 30px;
    margin-bottom: 10px;
  }

  .hero-text-left p {
    margin-top: 15px;
    color: #333;
  }

  .hero-text-left button {
    margin-top: 15px;
    padding: 10px 18px;
    background-color: #179b71;
    color: white;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: bold;
  }

  .hero-text-left button a {
    color: white;
    text-decoration: none;
  }

  .hero-image {
    flex: 1;
    text-align: center;
  }

  .hero-image img {
    max-width: 320px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  }

  .hero-text-right {
    margin-top: 10px;
    font-size: 14px;
    color: #555;
  }

  #product {
    text-align: center;
    padding: 40px 20px;
  }

  .pro-container {
    display: flex;
    justify-content: center;
    gap: 30px;
    flex-wrap: wrap;
    padding: 20px;
  }

  .pro {
    background: #fff;
    border-radius: 10px;
    padding: 15px;
    width: 250px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    transition: 0.3s ease-in-out;
  }

  .pro img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 8px;
  }

  .des h5 {
    margin: 10px 0 5px;
    font-size: 16px;
    color: #222;
  }

  .des p {
    font-size: 14px;
    color: #555;
  }

  #newsletter {
    background-color: #ffeef2;
    padding: 40px 20px;
    text-align: center;
    border-radius: 10px;
    margin: 40px 20px;
  }

  .form {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 20px;
    flex-wrap: wrap;
  }

  .form input {
    padding: 10px;
    width: 240px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  .form button {
    padding: 10px 18px;
    background-color: #179b71;
    border: none;
    color: white;
    border-radius: 5px;
    font-weight: bold;
    cursor: pointer;
  }
</style>

<div class="container">
    <h2>Register</h2>
    <form method="POST" action="/auth/register">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>

        <div class="form-group"> 
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
        </div>
        
        <div class="form-group">
            <label for="passwordConfirm">Confirm Password</label> 
            <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" required>
        </div>

        <button type="submit">Submit</button>
    </form>

    {{#if message}}
        <h4 class="alert alert-danger mt-4">{{message}}</h4>
    {{/if}}

</div>

</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>

<!-- Your custom script -->
<script>
  const menuBtn = document.getElementById("menu-button");
  const menuDropdown = document.getElementById("menu-dropdown");

  menuBtn.addEventListener("click", () => {
    menuDropdown.classList.toggle("hidden");
  });

  document.addEventListener("click", (e) => {
    if (!menuBtn.contains(e.target) && !menuDropdown.contains(e.target)) {
      menuDropdown.classList.add("hidden");
    }
  });
</script>

