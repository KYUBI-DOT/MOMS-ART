<div class="container" style="padding: 20px;">
  <h2 style="text-align: center; margin-bottom: 30px;">Manage Products</h2>

  <table style="width: 100%; border-collapse: collapse; margin-bottom: 40px;">
    <thead>
      <tr style="background-color: #f2f2f2;">
        <th style="padding: 10px; border: 1px solid #ddd;">ID</th>
        <th style="padding: 10px; border: 1px solid #ddd;">Name</th>
        <th style="padding: 10px; border: 1px solid #ddd;">Category</th>
        <th style="padding: 10px; border: 1px solid #ddd;">Price</th>
        <th style="padding: 10px; border: 1px solid #ddd;">Image</th>
        <th style="padding: 10px; border: 1px solid #ddd;">Status</th>
        <th style="padding: 10px; border: 1px solid #ddd;">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <td style="padding: 10px; border: 1px solid #ddd;">{{id}}</td>
          <td style="padding: 10px; border: 1px solid #ddd;">{{name}}</td>
          <td style="padding: 10px; border: 1px solid #ddd;">{{category}}</td>
          <td style="padding: 10px; border: 1px solid #ddd;">${{price}}</td>
          <td style="padding: 10px; border: 1px solid #ddd;">
            <img src="{{image}}" alt="Product Image" style="width: 60px; height: auto;">
          </td>
          <td style="padding: 10px; border: 1px solid #ddd;">
            {{#if status}} Active {{else}} Inactive {{/if}}
          </td>
          <td style="padding: 10px; border: 1px solid #ddd;">
            <a href="/admin/dashboard/products/{{id}}/edit" class="btn" style="margin-right: 5px;">Edit</a>
            <form action="/admin/dashboard/products/{{id}}/deactivate" method="POST" style="display:inline;">
              <button type="submit" class="btn"
                onclick="return confirm('Are you sure you want to {{#if status}}deactivate{{else}}activate{{/if}} this product?');">
                {{#if status}}Deactivate{{else}}Activate{{/if}}
              </button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
