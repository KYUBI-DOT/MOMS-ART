{{> header}}

<style>
  body {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    background-color: #f8f9fa;
    color: #333;
    margin-top: 140px;
    padding: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .form-benefits-wrapper {
    display: flex;
    max-width: 1100px;
    margin: 50px auto;
    gap: 100px;
    align-items: flex-start;
    justify-content: center;
    background-image: url('/productimage/sky1.JPG');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 15px;
    padding: 40px;
    
  }

  .container {
    flex: 1;
    max-width: 500px;
    padding: 20px;
    background-color: rgba(27, 163, 231, 0.132);
    border-radius: 10px;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
  }

  h2 {
    font-weight: 600;
    text-align: center;
    margin-bottom: 30px;
  }

  h4 {
    font-weight: 500;
    margin-bottom: 15px;
  }

  p {
    font-size: 15px;
    color: #333;
  }

  form {
    display: flex;
    flex-direction: column;
    background-color: rgba(27, 180, 231, 0);
  }

  .form-group {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
  }

  label {
    width: 120px;
    font-weight: bold;
    text-align: right;
    margin-right: 10px;
    font-size: 14px;
    color: #333;
  }

  input[type="text"], input[type="email"], input[type="password"] {
    flex: 1;
    padding: 12px;
    border: 1px solid #ccc;
    background: #f9f9f9;
    border-radius: 5px;
    font-size: 16px;
    transition: 0.3s;
  }

  input[type="text"]:focus,
  input[type="email"]:focus,
  input[type="password"]:focus {
    background-color: #8e2f2f06;
    border: 1px solid #17609b97;
    box-shadow: 0px 0px 5px rgba(23, 155, 113, 0.5);
    outline: none;
  }

  .form-check {
    margin: 10px 0;
  }

  .form-check-label {
    font-size: 14px;
    color: #333;
  }

  a {
    font-size: 14px;
    color: #0d3b66;
    text-decoration: none;
    text-align: center;
  }

  a:hover {
    text-decoration: underline;
  }

  .benefits {
  flex: 1;
  max-width: 480px;
  padding: 20px;
  background-image: url('/productimage/sky1.JPG');
  border-radius: 10px;
  box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
  position: relative;
  top: 40px; /* Adjust as needed */
}


  /* Styled link buttons */
  .link-button {
    display: inline-block;
    margin-top: 20px;
    font-weight: bold;
    font-size: 16px;
    color: #0d3b66;
    text-align: center;
    cursor: pointer;
    text-decoration: none;
  }

  .link-button:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .form-benefits-wrapper {
      flex-direction: column;
      gap: 30px;
    }
  }
</style>

<main>
  <div class="form-benefits-wrapper">
    <!-- Left: Login Form -->
    <div class="container">
      <h2>Customer Login</h2>
      <form method="POST" action="/auth/login">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required />
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required />
        </div>

        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="rememberMe" />
          <label class="form-check-label" for="rememberMe">Remember Me</label>
        </div>

        <!--<a href="/auth/forgot-password">Forgot Your Password?</a>-->

        <!-- Sign In as link -->
        <a href="#" onclick="this.closest('form').submit();" class="link-button">Sign In</a>

        {{#if message}}
          <h4 class="alert alert-danger mt-4">{{message}}</h4>
        {{/if}}
      </form>
    </div>

    <!-- Right: New Customers / Benefits -->
    <div class="benefits">
      <h4>New Customers</h4>
      <p>Create an account and register to become a Mom's Art VIP to be the first to hear about our latest news and offers.</p>
      <p>Receive <strong>10% off</strong> your purchase every time you shop with us!</p>

      <!-- Create Account as link -->
      <a href="/register" class="link-button">Create an Account</a>
    </div>
  </div>
</main>

<script>
  const menuBtn = document.getElementById("menu-button");
  const menuDropdown = document.getElementById("menu-dropdown");

  menuBtn?.addEventListener("click", () => {
    menuDropdown.classList.toggle("hidden");
  });

  document.addEventListener("click", (e) => {
    if (!menuBtn?.contains(e.target) && !menuDropdown?.contains(e.target)) {
      menuDropdown?.classList.add("hidden");
    }
  });
</script>

