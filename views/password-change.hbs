
{{> header}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shop</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <style>
    body {
      background-color: #fff3f7;
      margin: 0;
      font-family: sans-serif;
    }

    h1, h2, h3 {
      text-align: center;
    }

    #hero {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 60px 40px;
      gap: 40px;
      flex-wrap: wrap;
      background-color: #ffe6f0;
      border-radius: 10px;
      margin: 20px;
    }

    .hero-text-left {
      flex: 1;
      min-width: 280px;
    }

    .hero-text-left h2 {
      font-size: 30px;
      margin-bottom: 10px;
    }

    .hero-text-left p {
      margin-top: 15px;
      color: #333;
    }

    .hero-text-left button {
      margin-top: 15px;
      padding: 10px 18px;
      background-color: #179b71;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
    }

    .hero-text-left button a {
      color: white;
      text-decoration: none;
    }

    .hero-image {
      flex: 1;
      text-align: center;
    }

    .hero-image img {
      max-width: 320px;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .hero-text-right {
      margin-top: 10px;
      font-size: 14px;
      color: #555;
    }

    #product {
      text-align: center;
      padding: 40px 20px;
    }

    .pro-container {
      display: flex;
      justify-content: center;
      gap: 30px;
      flex-wrap: wrap;
      padding: 20px;
    }

    .pro {
      background: #fff;
      border-radius: 10px;
      padding: 15px;
      width: 250px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      transition: 0.3s ease-in-out;
      text-align: center;
    }

    .pro img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 8px;
    }

    .des h5 {
      margin: 10px 0 5px;
      font-size: 16px;
      color: #222;
    }

    .des p {
      font-size: 14px;
      color: #555;
    }

    .product-form {
      margin-top: 10px;
    }

    .product-form button {
      padding: 8px 14px;
      background-color: #179b71;
      color: white;
      border: none;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
    }

    #newsletter {
      background-color: #ffeef2;
      padding: 40px 20px;
      text-align: center;
      border-radius: 10px;
      margin: 40px 20px;
    }

    .form {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-top: 20px;
      flex-wrap: wrap;
    }

    .form input {
      padding: 10px;
      width: 240px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    .form button {
      padding: 10px 18px;
      background-color: #179b71;
      border: none;
      color: white;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
    }
  </style>
</head>
<form action="/change-password" method="POST">
  <label>Old Password:</label>
  <input type="password" name="oldPassword" required>
  <label>New Password:</label>
  <input type="password" name="newPassword" required>
  <button type="submit">Update Password</button>
</form>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>

<!-- Custom Script -->
<script>
  const menuBtn = document.getElementById("menu-button");
  const menuDropdown = document.getElementById("menu-dropdown");

  if (menuBtn && menuDropdown) {
    menuBtn.addEventListener("click", () => {
      menuDropdown.classList.toggle("hidden");
    });

    document.addEventListener("click", (e) => {
      if (!menuBtn.contains(e.target) && !menuDropdown.contains(e.target)) {
        menuDropdown.classList.add("hidden");
      }
    });
  }
</script>
