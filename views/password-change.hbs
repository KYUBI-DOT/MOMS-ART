{{> header}}

<style>
  body {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    background-color: #f6f6f6;
    color: #1c1c1c;
    margin: 0;
    padding: 0;
  }

  .change-wrapper {
    max-width: 500px;
    margin: 120px auto;
    background-color: #fff;
    padding: 40px 30px;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.08);
  }

  .change-wrapper h2 {
    text-align: center;
    margin-bottom: 25px;
    font-size: 26px;
    color: #333;
  }

  .change-wrapper form {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .change-wrapper input {
    padding: 12px 14px;
    font-size: 15px;
    border: 1px solid #ccc;
    border-radius: 6px;
    background-color: #f9f9f9;
  }

  .change-wrapper button {
    background-color: #179b71;
    color: white;
    border: none;
    padding: 12px;
    font-size: 16px;
    border-radius: 6px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .change-wrapper button:hover {
    background-color: #0e7a58;
  }

  .change-wrapper .message {
    text-align: center;
    margin-top: 15px;
    color: crimson;
    font-weight: 500;
  }
</style>

<div class="change-wrapper">
  <h2>Set a New Password</h2>
  <form action="/auth/password-reset/{{token}}" method="POST">
    <input type="password" name="password" placeholder="New password" required>
    <input type="password" name="confirmPassword" placeholder="Confirm password" required>
    <button type="submit">Reset Password</button>
  </form>

  {{#if message}}
    <div class="message">{{message}}</div>
  {{/if}}
</div>

{{> footer}}
