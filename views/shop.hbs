    width: 100%
}

.arrow-btn {
  background-color: #0bb3b9;
  color: white;
  border: none;
  padding: 12px 14px;
  border-radius: 50%;
  cursor: pointer;
  font-size: 18px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  transition: background-color 0.3s ease-in-out;
}

